RewriteEngine On

# Rewrite các file tĩnh css/js/img... về public/
RewriteCond %{REQUEST_URI} ^/(css|js|images|img|fonts)/ [NC]
RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f
RewriteRule ^(css|js|images|img|fonts)/(.*)$ public/$1/$2 [L]

# Nếu truy cập trực tiếp file hoặc thư mục thật (kể cả vừa rewrite xong)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Chặn truy cập file nhạy cảm ở root
RewriteRule ^(\.env|composer\.(json|lock)|\.git|vendor|node_modules) - [F,L]

# Nếu truy cập vào / (trang chủ), chuyển vào public/index.php
RewriteRule ^$ public/index.php [L]

# Tất cả các request còn lại chuyển vào public/index.php
RewriteRule ^ public/index.php [L]
