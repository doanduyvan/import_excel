RewriteEngine On

# Cho phép truy cập thẳng vào các file/folder tĩnh phổ biến
RewriteCond %{REQUEST_URI} ^/(index\.php|storage/|css/|js/|images?/|img/|fonts?/|favicon\.ico|robots\.txt) [NC]
RewriteRule ^ - [L]

# Cấm truy cập trực tiếp các file nhạy cảm
RewriteRule ^(\.env|composer\.(json|lock)|\.git|vendor|node_modules) - [F,L]

# Nếu file hoặc thư mục vật lý tồn tại thì cho phép truy cập
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Chuyển hướng tất cả request còn lại về index.php cho Laravel xử lý
RewriteRule ^ index.php [L]